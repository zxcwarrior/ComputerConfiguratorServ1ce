<Page x:Class="ComputerConfiguratorService.View.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:xctk="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
      Background="#F1F5F9"
      FontFamily="Segoe UI">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" Padding="16">
            <Frame x:Name="MenuFrame" NavigationUIVisibility="Hidden"/>
        </Border>

        <Border Grid.Column="1" Background="White" Padding="16">
            <Frame x:Name="DetailFrame" NavigationUIVisibility="Hidden"/>
        </Border>

        <Border Grid.Row="2" DockPanel.Dock="Right" VerticalAlignment="Bottom" Background="#E7EDF3" CornerRadius="12">
            <Button x:Name="BackToMenuButton" Content="Назад" Click="BackToMenuButton_Click"  Background="Transparent" BorderThickness="0" FontSize="18" 
                            FontWeight="Bold" Foreground="#0E141B" Padding="12,6" Cursor="Hand"/>
        </Border>
    </Grid>
</Page>
