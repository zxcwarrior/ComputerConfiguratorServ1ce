<Page x:Class="ComputerConfiguratorService.View.CPUsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="CPUs"
      Background="#F1F5F9"
      FontFamily="Segoe UI"
      Language="ru-RU">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Процессоры"
                   FontSize="32"
                   FontWeight="Black"
                   Foreground="#0E141B"
                   HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" Margin="10">
            <Button x:Name="BtnToggleFilter"
                    Content="Фильтрация"
                    Width="150"
                    Height="36"
                    Background="#E7EDF3"
                    BorderThickness="0"
                    Foreground="#0E141B"
                    FontSize="16"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Click="BtnToggleFilter_Click"/>
            <StackPanel x:Name="BtnAdminPanel"
                        Orientation="Horizontal"
                        Margin="10"
                        Visibility="Collapsed">
                <Button x:Name="BtnAdd"
                        Content="Добавить"
                        Width="150"
                        Height="36"
                        Margin="3"
                        Background="#E7EDF3"
                        BorderThickness="0"
                        Foreground="#0E141B"
                        FontSize="16"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="BtnAdd_Click"/>
                <Button x:Name="BtnEdit"
                        Content="Изменить"
                        Width="150"
                        Height="36"
                        Margin="3"
                        Background="#E7EDF3"
                        BorderThickness="0"
                        Foreground="#0E141B"
                        FontSize="16"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="BtnEdit_Click"
                        IsEnabled="False"/>
                <Button x:Name="BtnDelete"
                        Content="Удалить"
                        Width="150"
                        Height="36"
                        Margin="3"
                        Background="#E7EDF3"
                        BorderThickness="0"
                        Foreground="#0E141B"
                        FontSize="16"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="BtnDelete_Click"
                        IsEnabled="False"/>
            </StackPanel>
        </StackPanel>

        <Border x:Name="FilterPanel"
                Grid.Row="2"
                Background="#FFFFFF"
                BorderBrush="#E5E7EB"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16"
                Margin="10"
                Visibility="Collapsed">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Производители:    "
                               FontSize="14"
                               Foreground="#0E141B"
                               Margin="0,0,0,4"/>
                    <ListBox x:Name="LbManufacturers"
                             Width="200"
                             Height="60"
                             SelectionMode="Multiple"
                             FontSize="14"
                             Foreground="#0E141B">
                        <ListBoxItem Content="Intel"/>
                        <ListBoxItem Content="AMD"/>
                    </ListBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Цена от:" 
                               Width="120"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="#0E141B"/>
                    <TextBox x:Name="TbPriceMin"
                             Width="80"
                             FontSize="14"
                             Foreground="#0E141B"
                             PreviewTextInput="NumericOnly"/>
                    <TextBlock Text=" до "
                               Width="40"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="#0E141B"
                               HorizontalAlignment="Center"/>
                    <TextBox x:Name="TbPriceMax"
                             Width="80"
                             FontSize="14"
                             Foreground="#0E141B"
                             PreviewTextInput="NumericOnly"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Ядер:" 
                               Width="120"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="#0E141B"/>
                    <TextBox x:Name="TbCores"
                             Width="80"
                             FontSize="14"
                             Foreground="#0E141B"
                             PreviewTextInput="NumericOnly"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Модель:" 
                               Width="120"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="#0E141B"/>
                    <TextBox x:Name="TbModelFilter"
                             Width="200"
                             FontSize="14"
                             Foreground="#0E141B"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,12,0,0">
                    <Button x:Name="BtnApplyFilter"
                            Content="Применить"
                            Width="100"
                            Height="32"
                            Background="#0E141B"
                            Foreground="White"
                            FontSize="14"
                            Click="BtnApplyFilter_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <ListView x:Name="LVCPUs"
                  Grid.Row="3"
                  SelectionChanged="LVCPUs_SelectionChanged">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="16"
                            Margin="8"
                            Background="White"
                            CornerRadius="12"
                            BorderBrush="#E5E7EB"
                            BorderThickness="1"
                            MinWidth="850"
                            MinHeight="130">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                <TextBlock Text="{Binding Model}"
                                           FontSize="14"
                                           Foreground="#4E7397"/>
                                <TextBlock Text="{Binding Price, StringFormat=C}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#0E141B"
                                           Margin="0,4,0,4"/>
                                <TextBlock FontSize="14" Foreground="#0E141B">
                                    <Run Text="{Binding Cores}"/>
                                    <Run Text=" ядер, "/>
                                    <Run Text="{Binding Threads}"/>
                                    <Run Text=" потоков"/>
                                </TextBlock>
                                <TextBlock Text="{Binding Sockets.SocketName, StringFormat='Сокет: {0}'}"
                                           FontSize="14"
                                           Foreground="#0E141B"
                                           Margin="0,4,0,0"/>
                                <TextBlock Text="{Binding Manufacturers.ManufacturerName, StringFormat='Производитель: {0}'}"
                                           FontSize="14"
                                           Foreground="#0E141B"
                                           Margin="0,4,0,0"/>
                                <TextBlock Text="{Binding BaseClock, StringFormat='Базовая частота: {0} ГГц'}"
                                           FontSize="14"
                                           Foreground="#0E141B"
                                           Margin="0,4,0,0"/>
                                <TextBlock Text="{Binding BoostClock, StringFormat='Турбобуст: {0} ГГц'}"
                                           FontSize="14"
                                           Foreground="#0E141B"/>
                                <TextBlock Text="{Binding TDP, StringFormat='TDP: {0}W'}"
                                           FontSize="14"
                                           Foreground="#0E141B"/>
                            </StackPanel>

                            <Border Grid.Column="1"
                                    CornerRadius="12"
                                    ClipToBounds="True">
                                <Image Source="{Binding ImagePath}"
                                       Stretch="Fill"
                                       Height="160"
                                       Width="200"
                                       HorizontalAlignment="Right"/>
                            </Border>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Border x:Name="EditPanel"
                Grid.Row="3"
                Background="White"
                BorderBrush="#E5E7EB"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16"
                Margin="10"
                Visibility="Collapsed">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Сокет:" 
                               Width="120"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="#0E141B"/>
                    <ComboBox x:Name="CbEditSocket"
                              Width="200"
                              FontSize="14"
                              Foreground="#0E141B"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Производитель:" 
                               Width="120"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="#0E141B"/>
                    <ComboBox x:Name="CbEditManufacturer"
                              Width="200"
                              FontSize="14"
                              Foreground="#0E141B">
                        <ComboBoxItem Content="Intel"/>
                        <ComboBoxItem Content="AMD"/>
                    </ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Модель:" 
                               Width="120"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="#0E141B"/>
                    <TextBox x:Name="TbEditModel"
                             Width="200"
                             FontSize="14"
                             Foreground="#0E141B"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Ядер:" 
                               Width="60"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="#0E141B"/>
                    <TextBox x:Name="TbEditCores"
                             Width="60"
                             FontSize="14"
                             Foreground="#0E141B"
                             PreviewTextInput="NumericOnly"/>
                    <TextBlock Text="  Потоков:" 
                               Width="70"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="#0E141B"
                               Margin="10,0,0,0"/>
                    <TextBox x:Name="TbEditThreads"
                             Width="60"
                             FontSize="14"
                             Foreground="#0E141B"
                             PreviewTextInput="NumericOnly"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Баз. частота (ГГц):" 
                               Width="120"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="#0E141B"/>
                    <TextBox x:Name="TbEditBaseClock"
                             Width="80"
                             FontSize="14"
                             Foreground="#0E141B"/>
                    <TextBlock Text="  Турбо (ГГц):" 
                               Width="80"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="#0E141B"
                               Margin="10,0,0,0"/>
                    <TextBox x:Name="TbEditBoostClock"
                             Width="80"
                             FontSize="14"
                             Foreground="#0E141B"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="TDP (W):" 
                               Width="60"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="#0E141B"/>
                    <TextBox x:Name="TbEditTDP"
                             Width="60"
                             FontSize="14"
                             Foreground="#0E141B"
                             PreviewTextInput="NumericOnly"/>
                    <TextBlock Text="  Цена (₽):" 
                               Width="60"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="#0E141B"
                               Margin="10,0,0,0"/>
                    <TextBox x:Name="TbEditPrice"
                             Width="80"
                             FontSize="14"
                             Foreground="#0E141B"
                             PreviewTextInput="NumericOnly"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="URL картинки:" 
                               Width="120"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="#0E141B"/>
                    <TextBox x:Name="TbEditImagePath"
                             Width="300"
                             FontSize="14"
                             Foreground="#0E141B"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="BtnSave"
                            Content="Сохранить"
                            Width="100"
                            Height="32"
                            Background="#0E141B"
                            Foreground="White"
                            FontSize="14"
                            Margin="0,0,10,0"
                            Click="BtnSave_Click"/>
                    <Button x:Name="BtnCancel"
                            Content="Отменить"
                            Width="100"
                            Height="32"
                            Background="#E7EDF3"
                            Foreground="#0E141B"
                            FontSize="14"
                            Click="BtnCancel_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
