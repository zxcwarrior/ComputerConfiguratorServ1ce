<Page x:Class="ComputerConfiguratorService.View.SocketsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Сокеты"
      Background="#F1F5F9"
      FontFamily="Segoe UI"
      Language="ru-RU">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0"
               Text="Сокеты"
               FontSize="32"
               FontWeight="Black"
               Foreground="#0E141B"
               HorizontalAlignment="Center"/>

        <!-- Админ-панель -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,8">
            <Button x:Name="BtnAdd" Content="Добавить" Width="100" Height="32" Margin="0,0,8,0"
              Background="#E7EDF3" BorderThickness="0" Click="AddNewButton_Click"/>
            <Button x:Name="BtnEdit" Content="Изменить" Width="100" Height="32" Margin="0,0,8,0"
              Background="#E7EDF3" BorderThickness="0" Click="EditButton_Click" IsEnabled="False"/>
            <Button x:Name="BtnDelete" Content="Удалить" Width="100" Height="32"
              Background="#E7EDF3" BorderThickness="0" Click="DeleteButton_Click" IsEnabled="False"/>
        </StackPanel>

        <!-- Список -->
        <ListView x:Name="LVReference" Grid.Row="2" SelectionChanged="LVReference_SelectionChanged" FontSize="22"
              BorderBrush="#E5E7EB" BorderThickness="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Сокет" Width="300" DisplayMemberBinding="{Binding SocketName}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- EditPanel -->
        <Border x:Name="EditPanel" Grid.Row="3" Visibility="Collapsed"
            Background="White" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8"
            Padding="16" Margin="0,8,0,0">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock Text="Название сокета:" Width="120" VerticalAlignment="Center" FontSize="14" Foreground="#0E141B"/>
                    <TextBox x:Name="tbName" Width="200" FontSize="14" Foreground="#0E141B"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="SaveButton" Content="Сохранить" Width="100" Height="32" Margin="0,0,8,0"
                  Background="#0E141B" Foreground="White" Click="SaveButton_Click"/>
                    <Button x:Name="CancelButton" Content="Отменить" Width="100" Height="32"
                  Background="#E7EDF3" Click="CancelButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
