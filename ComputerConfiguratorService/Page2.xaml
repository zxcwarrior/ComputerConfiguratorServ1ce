<Page x:Class="ComputerConfiguratorService.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="GPUs"
      Background="#F1F5F9"
      FontFamily="Segoe UI">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Видеокарты" FontSize="32" FontWeight="Black" Foreground="#0E141B" HorizontalAlignment="Center"/>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Grid.Row="1" Margin="10">
                <DockPanel>
                    <Border CornerRadius="12" Background="#E7EDF3" Padding="8,4">
                        <Button Content="Применить фильтры" Background="Transparent" BorderThickness="0" Foreground="#0E141B" FontSize="16" FontWeight="Bold" Cursor="Hand"/>
                    </Border>
                </DockPanel>
            </StackPanel>
        </ScrollViewer>
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <ListView x:Name="LVGPUs" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="16" Margin="8" Background="White" CornerRadius="12" BorderBrush="#E5E7EB" BorderThickness="1" MinWidth="850" MinHeight="180">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                        <TextBlock Text="{Binding Model}" FontSize="14" Foreground="#4E7397"/>
                                        <TextBlock Text="{Binding Price, StringFormat=C}" FontSize="16" FontWeight="Bold" Foreground="#0E141B" Margin="0,4,0,4"/>
                                        <TextBlock FontSize="14" Foreground="#0E141B">
                                            <Run Text="{Binding MemoryGB}"/> <Run Text=" ГБ "/> <Run Text="{Binding GPUMemoryType.MemoryType}"/>
                                        </TextBlock>
                                        <TextBlock Text="{Binding CoreBaseClock, StringFormat='Базовая частота: {0} МГц'}" FontSize="14" Foreground="#0E141B" Margin="0,4,0,0"/>
                                        <TextBlock Text="{Binding Vendor.VendorName, StringFormat='Поставщик: '}" FontSize="14" Foreground="#0E141B"/>
                                    </StackPanel>
                                    <Border Grid.Column="1" CornerRadius="12" ClipToBounds="True">
                                        <Image Source="{Binding ImagePath}" Stretch="Fill" Height="160" Width="200" HorizontalAlignment="Right"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
